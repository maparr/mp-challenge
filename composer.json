{
  "name": "setapp/test",
  "type": "lib",
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "7.5.*",
    "friendsofphp/php-cs-fixer": "^2.15"
  },
  "autoload": {
    "psr-4": {
      "Setapp\\Test\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Setapp\\Test\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --testdox tests",
    "format": [
      "vendor/bin/php-cs-fixer fix ./src"
    ]
  }
}
